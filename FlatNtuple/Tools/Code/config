#! /bin/bash
echo "Configuring Environment...."
export ROOTSYS=/usr/lib/root-5.22.00b/
export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:$PWD/EXTERNAL/TauNtuple/lib
## now downloading required code from CVS
cd EXTERNAL/TauNtuple
npdg=$(ls TauDataFormat/*/*/* | grep PdtPdgMini | wc -l)
cd ..
if [ $npdg != 2 ]; then
    echo "c1"
    rm EXTERNAL/TauNtuple/TauDataFormat -rf
    rm EXTERNAL/TauNtuple/TauDataFormat -rf
    cvs co -d EXTERNAL/TauNtuple/TauDataFormat/TauNtuple/interface -r HEAD UserCode/RWTH3b/Tau/FlatNtuple/TauDataFormat/TauNtuple/interface/PdtPdgMini.h
    cvs co -d EXTERNAL/TauNtuple/TauDataFormat/TauNtuple/src -r HEAD UserCode/RWTH3b/Tau/FlatNtuple/TauDataFormat/TauNtuple/src/PdtPdgMini.cc
    mv EXTERNAL/TauNtuple/TauDataFormat/TauNtuple/src/PdtPdgMini.cc EXTERNAL/TauNtuple/TauDataFormat/TauNtuple/src/PdtPdgMini.cxx
fi
echo "Environment Configured"
