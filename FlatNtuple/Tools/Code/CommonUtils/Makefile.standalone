#################################################
### Defining Compiling variables              ###
#################################################



CXX           = g++ -Wno-deprecated
LD            = g++ -Wno-deprecated 
INSTALL	      = /usr/bin/install
SHELL = /bin/sh

####################################
###                              ###
####################################

CXXFLAGS      = -I$(ROOTSYS)/include -I./ -c
LDFLAGS       =  
ROOTLIBS      =  -L$(ROOTSYS)/lib -L/usr/lib/ -L/lib/i686/  -lCore -lCint -lHist -lGraf  -lGraf3d -lGpad -lTree -lRint -lReflexDict -lReflex -lPostscript -lMatrix -lPhysics -lGui -LObj -lThread -rdynamic -Wl,--rpath $(ROOTSYS)/lib

DEFS  	      = -DSTANDALONE=1
LIBS          = $(ROOTLIBS) $(SHAREDLIBFLAGS)

HDRS          = TauDataFormat/TauNtuple/interface/PdtPdgMini.h \
		TauDataFormat/TauNtuple/interface/TauDecay.h \
		TauDataFormat/TauNtuple/interface/DataMCType.h

SRCS          = TauDataFormat/TauNtuple/src/PdtPdgMini.cc \
		TauDataFormat/TauNtuple/src/TauDecay.cc \
		TauDataFormat/TauNtuple/src/DataMCType.cc

OBJS          = PdtPdgMini.o TauDecay.o DataMCType.o

SHAREDLIB     = lib/libTauNtuple.so

$(SHAREDLIB): $(OBJS)
	@echo "======================================================="
	@echo "Linking SharedLib: $(SHAREDLIB) ..."
	@echo $(LD) $(LDFLAGS) -shared OBJECTS/*.o $(LIBS) -o $(SHAREDLIB)
	@$(LD) $(LDFLAGS) -shared OBJECTS/*.o $(LIBS) -o $(SHAREDLIB)
	@echo "Linking SharedLib: $(SHAREDLIB) Complete"
	@echo "======================================================="

VPATH = utilities:OBJECTS
#	@$(LD) $(LDFLAGS) $(OBJS) $(LIBS) -o ../$(PROGRAM)

##########################################################
###                                                    ###
##########################################################

$(OBJS): %.o: $(SRCS)
	$(CXX) $(CXXFLAGS) $(DEFS) -fpic $< -o OBJECTS/$@

.PHONY: clean install 

install: $(SHAREDLIB)

clean:
	@rm OBJECTS/*.o
	@rm lib/*.so
